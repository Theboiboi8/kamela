---
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description}/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Anybody:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<div class="main">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	@import "../styles/global.css";
</style>

<script>
	const colorSchemeQueryList = window.matchMedia('(prefers-color-scheme: dark)');
  
  	let isDarkMode = false;
  	const setColorScheme = (e: any) => {
		if (e.matches) {
	  		// Dark
	  		isDarkMode = true;
		} else {
	  		// Light
	  		isDarkMode = false;
		}
  	}

  	setColorScheme(colorSchemeQueryList);
  	colorSchemeQueryList.addEventListener('change', setColorScheme);

  	if (isDarkMode) {
		document.querySelector("link[rel*='icon']")!.setAttribute('href','favicon.svg');
  	} else {
		document.querySelector("link[rel*='icon']")!.setAttribute('href','favicon_light.svg');
  	}
</script>