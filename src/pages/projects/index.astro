---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import CardGrid from "../../components/CardGrid.astro";
---

<Layout title="Home | Kamela" description="3D Generalist and Software Developer /// Kamela">
	<main>
		<h1 class="header">Projects</h1>

		<CardGrid>
			<Card title="Abyssal" body="My Minecraft mod Abyssal" href="https://github.com/Theboiboi8/abyssal" target="_blank"/>
			<Card title="This Website" body="The very website you're currently on" href="https://github.com/Theboiboi8/kamela" target="_blank"/>
		</CardGrid>
	</main>
</Layout>

<style>
	main {
		margin: 0;
		padding: 1rem 15dvw;
		width: 100dvw;
		color: white;
		font-size: 20px;
		line-height: 1.6;
		box-sizing: border-box;
		@media (max-device-width: 650px) {
			padding: 0 5dvw;
		}
		min-height: 100dvh;
		min-width: 100dvw;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.header {
		font-size: 5em;
		font-weight: 900;
		padding-top: 4rem;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
</style>
